{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Lwjgl3Launcher",
            "request": "launch",
            "mainClass": "io.github.unisim.lwjgl3.Lwjgl3Launcher",
            "projectName": "lwjgl3",
            "cwd": "${workspaceFolder}",
            "vmArgs": "-XstartOnFirstThread",
            "classpath": [
                "${workspaceFolder}/assets",
                "${default}"
            ]
        }
    ]
}